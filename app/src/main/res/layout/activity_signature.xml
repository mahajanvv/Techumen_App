<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dontknow.techumen.Signature"
    android:background="#e5e5e5">

    <com.github.gcacace.signaturepad.views.SignaturePad
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/signature_pad"
        android:layout_width="match_parent"
        android:layout_height="280sp"
        android:layout_margin="10dp"
        app:penColor="@android:color/black"
        app:clearOnDoubleClick="true"
        android:background="@drawable/cornerradius"
        />


    <EditText
        android:id="@+id/idRemaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:background="@drawable/cornerradius"
        android:hint="Remaining Money"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/signature_pad"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/idTransaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Transaction id of Paytm if any"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/idRemaining"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:textCursorDrawable="@color/cardview_dark_background"
        android:layout_marginTop="10dp"
        />

    <Button
        android:id="@+id/idclear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear Signature"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sig_btn"
        android:layout_centerInParent="true"
        android:layout_below="@+id/idTransaction"
        android:layout_marginTop="10dp" />


    <Button
        android:id="@+id/idRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:background="@drawable/sig_btn2"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:layout_below="@+id/idclear"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
